<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.anglefish.game.torus3d2" android:versionCode="5" android:versionName="1.0"
          android:installLocation="preferExternal">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".WelcomeAct" android:label="@string/app_name"
                  android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".GoAct" android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name=".TorusAct" android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name=".SettingAct"
                  android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name=".HelpAct" android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="HighScoresAct"
                  android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity android:name="com.google.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-sdk android:minSdkVersion="3"/>
</manifest>
